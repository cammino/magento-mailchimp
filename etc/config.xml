<?xml version="1.0"?>
<config>
	<modules>
		<Cammino_Mailchimp>
			<version>0.1.0</version>
		</Cammino_Mailchimp>
	</modules>
	<global>
		<blocks>
			<mailchimp>
				<class>Cammino_Mailchimp_Block</class>
			</mailchimp>
		</blocks>
		
		<models>
			<mailchimp>
				<class>Cammino_Mailchimp_Model</class>
			</mailchimp>
		</models>

		<events>
			<newsletter_subscriber_save_commit_after>
				<observers>
					<subscriber_observer>
						<type>singleton</type>
						<class>Cammino_Mailchimp_Model_Observer_Subscriber</class>
						<method>sync</method>
					</subscriber_observer>
				</observers>
			</newsletter_subscriber_save_commit_after>
			<checkout_onepage_controller_success_action>
				<observers>
					<ecommerce_observer_send_order>
						<type>singleton</type>
						<class>Cammino_Mailchimp_Model_Observer_Ecommerce</class>
						<method>sendMcOrder</method>
					</ecommerce_observer_send_order>
				</observers>
			</checkout_onepage_controller_success_action>
			<controller_action_layout_render_before_checkout_cart_index>
				<observers>
					<ecommerce_observer_send_cart>
						<type>singleton</type>
						<class>Cammino_Mailchimp_Model_Observer_Ecommerce</class>
						<method>sendMcCart</method>
					</ecommerce_observer_send_cart>
				</observers>
			</controller_action_layout_render_before_checkout_cart_index>
		</events>

		
	</global>

	<frontend>
		<routers>
			<mailchimp>
				<use>standard</use>
				<args>
					<module>Cammino_Mailchimp</module>
					<frontName>mailchimp</frontName>
				</args>
			</mailchimp>
		</routers>
	</frontend>
</config>